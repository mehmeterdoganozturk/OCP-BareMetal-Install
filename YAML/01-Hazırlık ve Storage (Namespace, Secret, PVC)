---
# 1. Namespace
apiVersion: v1
kind: Namespace
metadata:
  name: n8n-prod

---
# 2. Secret (Eksikti, örnek olarak eklendi)
# Değerler Base64 formatındadır. Örn: echo -n "n8n_user" | base64
apiVersion: v1
kind: Secret
metadata:
  name: n8n-postgres-secret
  namespace: n8n-prod
type: Opaque
#data:
#  POSTGRES_DB: bjhndGVzdG_kYiA=      # n8ntestdb (Örnek)
#  POSTGRES_USER: bjhfdXNlcg==        # n8user (Örnek)
#  POSTGRES_PASSWORD: cGFzc3dvcmQ=    # password (Örnek - LÜTFEN DEĞİŞTİRİN)

# DİKKAT: 'data' yerine 'stringData' kullanıyoruz.
# Bu sayede base64 ile uğraşmadan düz metin yazabilirsin.
stringData:
  POSTGRES_DB: n8ndb
  POSTGRES_USER: n8n_user
  POSTGRES_PASSWORD: n8npasswd
---
# 3. StorageClass
apiVersion: storage.k8s.io/v1
kind: StorageClass
metadata:
  name: default-nfs
  annotations:
    storageclass.kubernetes.io/is-default-class: "true"
provisioner: kubernetes.io/no-provisioner
reclaimPolicy: Retain
volumeBindingMode: WaitForFirstConsumer

---
# 4. Persistent Volumes (NFS Tanımları)
apiVersion: v1
kind: PersistentVolume
metadata:
  name: n8n-app-pv
spec:
  capacity:
    storage: 5Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: default-nfs
  nfs:
    server: 10.125.0.254
    path: /mnt/n8n/app  # NFS sunucuda bu klasör olmalı

---
apiVersion: v1
kind: PersistentVolume
metadata:
  name: n8n-postgres-pv
spec:
  capacity:
    storage: 10Gi
  volumeMode: Filesystem
  accessModes:
    - ReadWriteOnce
  persistentVolumeReclaimPolicy: Retain
  storageClassName: default-nfs
  nfs:
    server: 10.125.0.254
    path: /mnt/n8n/postgres # NFS sunucuda bu klasör olmalı

---
# 5. Persistent Volume Claims (Disk İstekleri)
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: n8n-pvc
  namespace: n8n-prod
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: default-nfs
  volumeName: n8n-app-pv
  resources:
    requests:
      storage: 5Gi

---
apiVersion: v1
kind: PersistentVolumeClaim
metadata:
  name: postgres-pvc
  namespace: n8n-prod
spec:
  accessModes:
    - ReadWriteOnce
  storageClassName: default-nfs
  volumeName: n8n-postgres-pv
  resources:
    requests:
      storage: 10Gi
